{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "generate",
            "type": "shell",
            "command": "cmake -S . -B build"
        },
        {
            "label": "build",
            "type": "shell",
            "command": "cmake --build build"
        },
        {
            "label": "run",
            "type": "process",
            "dependsOn": "build",
            "command": "PuzzleGame.exe",
            "options": {
                "cwd": "${workspaceFolder}/build/bin"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}