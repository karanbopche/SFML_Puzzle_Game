{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "generate debug",
            "type": "shell",
            "command": "cmake -S . -B build -G 'MinGW Makefiles' -DCMAKE_BUILD_TYPE=debug"
        },
        {
            "label": "generate release",
            "type": "shell",
            "command": "cmake -S . -B build -G 'MinGW Makefiles' -DCMAKE_BUILD_TYPE=release"
        },
        {
            "label": "build",
            "type": "shell",
            "command": "cmake --build build -j",
        },
        {
            "label": "run",
            "type": "process",
            "dependsOn": "build",
            "command": "PuzzleGame.exe",
            "options": {
                "cwd": "${workspaceFolder}/build/bin"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}